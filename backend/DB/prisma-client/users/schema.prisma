generator client {
  provider = "prisma-client-js"
  output = "../DB/prisma-client/users"
  binaryTargets = ["native", "debian-openssl-1.1.x","debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_USER")
}


model User {
  id Int @id @default(autoincrement())
  username String @unique @db.VarChar(70)
  email String @db.VarChar(255)
  password String @db.VarChar(255)
  first_name String @db.VarChar(70)
  last_name String @db.VarChar(70)
  phone String @db.VarChar(20)
  enc String @db.VarChar(64)
  is2FA Boolean @default(false)
  isSMS Boolean @default(false)
  isEmail Boolean @default(false)
  isTOTP Boolean @default(false)
}